SET	E0	0001	;COLOR
SET	E1	0000	;XPOS 
SET	E2	0000	;YPOS
SET	E3	0030	;STOP VALUE
SET	E4	0000	;ALWAYS ZERO
SET	E5	0001	;ALWAYS ONE

LOAD	G3	E4
LOOP:
LOAD	G0	E2	;LOAD YPOS
ADD	G0	E5	;ADD ONE TO YPOS
STORE	G0	E2	;STORE YPOS
LOAD	G0	E1	;LOAD XPOS
ADD	G0	E5	;ADD ONE TO XPOS
STORE	G0	E1	;STORE XPOS
LSR	G0	$06	;LEFTSHIFT TO MAKE SPACE FOR YPOS
ADD	G0	E2	;	ADD YPOS
LSR	G0	$01	;MAKE PLACE FOR COLOR
ADD	G0	E0	;ADD COLOR
STOREV	G0	;SEND TO GM
ADD	G3	E5
CMP	G3	E3
BEQ	HALT
BRA	LOOP
HALT:
HALT
